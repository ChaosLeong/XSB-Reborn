<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="actionBarIconColor">#fff</item>
        <item name="android:windowBackground">@color/window_bg</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBar">true</item>
        <item name="homeAsUpIndicator">@drawable/ic_up</item>
        <item name="popupItemBackground">?android:selectableItemBackground</item>
        <item name="android:popupMenuStyle">@style/Widget.Toolbar.PopupMenu</item>
        <item name="android:listPopupWindowStyle">@style/Widget.Toolbar.PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/Widget.Toolbar.ListView.DropDown</item>
        <item name="android:editTextStyle">@style/EditText</item>
        <!--<item name="android:textColorPrimary">#fff</item>-->
        <item name="colorControlNormal">#BBDEFB</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="ToolbarTheme.Base" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="ToolbarTheme" parent="ToolbarTheme.Base"/>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:textColorPrimary">@color/title_color</item>
        <item name="titleTextAppearance">@style/TitleText</item>
    </style>

    <style name="ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="titleTextStyle">@style/TitleText</item>
    </style>

    <style name="TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/title_color</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">#BDBDBD</item>
    </style>

    <style name="Toolbar.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:dropDownWidth">160dp</item>
    </style>

    <style name="ActionBarThemeOverlay" parent="AppTheme">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlNormal">?actionBarIconColor</item>
        <item name="colorControlHighlight">#3fff</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="Widget.Toolbar.Spinner.Base" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="Widget.Toolbar.Spinner" parent="Widget.Toolbar.Spinner.Base"/>

    <style name="Theme.LightBase" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
    </style>

    <style name="Theme.Transparent" parent="@style/Theme.LightBase">
        <item name="android:windowBackground">@color/host_background</item>
        <item name="android:actionBarStyle">@style/Theme.Transparent.ActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/Theme.Transparent.ActionBar</item>
    </style>

    <style name="Theme.Transparent.ActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/actionbar_gradient</item>
        <item name="android:actionBarTabTextStyle">@style/TitleText</item>
        <item name="android:titleTextStyle">@style/TitleText</item>
        <item name="android:actionMenuTextColor">@color/title_color</item>
        <item name="actionBarTabTextStyle">@style/TitleText</item>
        <item name="actionMenuTextColor">@color/title_color</item>
        <item name="titleTextStyle">@style/TitleText</item>
        <item name="background">@drawable/actionbar_gradient</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Widget.Toolbar.PopupMenu" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:dropDownSelector">?popupItemBackground</item>
    </style>

    <style name="Widget.Toolbar.ListView.DropDown" parent="Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:background">#fff</item>
        <item name="android:listSelector">?popupItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="CommentButton">
        <item name="android:background">@drawable/white_button_30</item>
        <item name="android:minHeight">@dimen/btn_height</item>
        <item name="android:minWidth">@dimen/btn_width</item>
        <item name="android:maxHeight">@dimen/btn_height</item>
        <item name="android:maxWidth">@dimen/btn_width</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Info">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:singleLine">true</item>
        <item name="android:enabled">false</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@null</item>
        <item name="android:text">未知</item>
    </style>

    <style name="Label" parent="Info">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:clickable">false</item>
        <item name="android:enabled">true</item>
    </style>

    <style name="Message">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:maxLength">400</item>
        <item name="android:maxWidth">280dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>
</resources>
