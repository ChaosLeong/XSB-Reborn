<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0.2dp"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:id="@+id/container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_small"
        android:background="?popupItemBackground"
        android:clickable="true">

        <com.sise.help.ui.widget.BezelImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/small_avatar"
            android:layout_height="@dimen/small_avatar"
            android:layout_marginRight="@dimen/text_size_big"
            android:src="@drawable/person_image_empty"
            android:scaleType="centerCrop"
            app:maskDrawable="@drawable/circle_mask"
            android:clickable="true" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_toRightOf="@+id/avatar"
            android:layout_alignTop="@+id/avatar"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_large"
            tools:text="标题" />

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_toRightOf="@+id/avatar"
            android:layout_below="@+id/title"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_big"
            tools:text="用户名" />

        <ImageView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            tools:src="@drawable/bt_ic_snooze_amb_24dp" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_toRightOf="@+id/avatar"
            android:layout_below="@+id/nickname"
            android:ellipsize="end"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_size_big"
            tools:text="正文内容正文内容正文内容正文内容正文内容正文内容" />
    </RelativeLayout>
</android.support.v7.widget.CardView>